# app/views/members/edit.html.erb
<div class="max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-6">Complete Your Profile</h1>
  
  <%= form_with(model: @member, local: true, class: "space-y-4") do |form| %>
    <% if @member.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold">Please fix the following errors:</h2>
        <ul class="list-disc ml-5">
          <% @member.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div>
      <%= form.label :first_name, class: "block text-gray-700 font-medium mb-1" %>
      <%= form.text_field :first_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>
    
    <div>
      <%= form.label :last_name, class: "block text-gray-700 font-medium mb-1" %>
      <%= form.text_field :last_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>
    
    <div>
      <%= form.label :email, class: "block text-gray-700 font-medium mb-1" %>
      <%= form.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-100", readonly: true %>
      <p class="text-sm text-gray-500 mt-1">Email address cannot be changed</p>
    </div>
    
    <div>
      <%= form.label :property_address, class: "block text-gray-700 font-medium mb-1" %>
      <%= form.text_field :property_address, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
      <p class="text-sm text-gray-500 mt-1">Please enter your property address within Quail Creek</p>
    </div>
    
    <div class="flex justify-end">
      <%= form.submit "Update Profile", class: "bg-red-600 hover:bg-red-700 text-white py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>